include _mixins
block footer

    footer#footer.footer

        .container

            .footer__main

                .footer__menu

                    .footer__tabs

                        .swiper

                            .swiper-wrapper

                                .footer__tab-item.swiper-slide.active(data-active=1) Пациентам
                                .footer__tab-item.swiper-slide(data-active=2) Франшиза
