                .footer__services

                    .footer__contacts

                        .footer__tel

                            .footer__phone
                                .footer__phone-icon
                                    img(src="assets/images/phone.svg", alt="icon")
                                .footer__phone-value
                                    a(href="tel:+7 (495) 260-11-26") +7 (495) 260-11-26
                            
                            .footer__callback.button-style.button-style--gray Заказать звонок

                        .footer__socials

                            .footer__social-tg
                                a(href="#") 
                                    img(src="assets/images/telegram.svg", alt="icon")

                            .footer__social-vk
                                a(href="#") 
                                    img(src="assets/images/vk.svg", alt="icon")

                    .footer__buttons
                        .footer__prices.button-style.button-style--green Анализы и цены
                        .footer__results.button-style.button-style--green Узнать результат

            .footer__bottom

