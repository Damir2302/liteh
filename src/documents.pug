    .container
        h1.title Документы

    .sidebar-page 
        .container 
            .sidebar-page-wrapper 

                .sidebar-page__nav 
                    ul.sidebar-page__list
                        li
                            a(href="") Наша лаборатория
                        li.active
                            a(href="") Документы
                        li
                            a(href="") Ваши акции
                        li
                            a(href="") Лицензии и сертификаты
                        li
                            a(href="") Вакансии
                        li
                            a(href="") Франшиза
                        li
                            a(href="") Отзывы
                        li
                            a(href="") Вопрос и ответ

                .sidebar-page__content.documents__content
                    .documents-items
                        .documents-items__item
                            .documents-items__title Регистрационные документы (лаборатория "Литех")
                            .documents-items-images
                                .documents-items-images__img
                                    img(src="assets/images/document-1.jpg", alt="document")
                                .documents-items-images__img
                                    img(src="assets/images/document-2.jpg", alt="document")
                        .documents-items__item
                            .documents-items__title Регистрационные документы ("Литех Диагностика")
                            .documents-items-images
                                .documents-items-images__img
                                    img(src="assets/images/document-3.jpg", alt="document")
                                .documents-items-images__img
                                    img(src="assets/images/document-4.jpg", alt="document")
                        .documents-items__item
                            .documents-items__title Сводная ведомость результатов проведения специальной проверки условий труда в ООО Лаборатория "Литех"
                            .documents-items-images
                                .documents-items-images__img
                                    img(src="assets/images/document-5.jpg", alt="document")
                        .documents-items__item
                            .documents-items__title Сводные данные о результатах проведения специальной оценки условий труда в ООО "Литех Диагностика"
                            .documents-items-images
                                .documents-items-images__img
                                    img(src="assets/images/document-6.jpg", alt="document")
    
    section.section-subscribe

        .container

            .subscribe

                .subscribe-container

                    .subscribe__title.title Подпишитесь на&nbsp;нашу&nbsp;рассылку

                    .subscribe__wrapper

                        form

                            .subscribe__input
                                input#email(type="email", name="email" placeholder="Ваш e-mail" required)
                                button.button-style.button-style--fill-orange(type="submit") Подписаться

                        .subscribe__agreement
                            img(src="assets/images/check-square.svg", alt="icon")
                            p Даю согласие на обработку персональных данных

                // Успешная подписка
                .subscribe-success.hide
                    .subscribe-success__title Спасибо за подписку!
                    .subscribe-success__text Мы отправили вам письмо для подтверждения почтового ящика